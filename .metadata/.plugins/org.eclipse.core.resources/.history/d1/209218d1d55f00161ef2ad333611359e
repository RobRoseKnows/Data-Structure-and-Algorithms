
public class HeapSortImpl implements SortService{

	private void max_heap_recu(int[] ori_array, int i, int n){
		int largest = i;
		int left = 2*i+1;
		int right = 2*i+2;
		if(ori_array[left] > ori_array[largest]){
			UtilTool.swap(ori_array, left, largest);
			largest = left;
		}
		if(ori_array[right] > ori_array[largest]){
			
			UtilTool.swap(ori_array, right, largest);
			largest = right;
		}
		
	}
	@Override
	public int sort(int[] ori_array, int n) {
		// TODO Auto-generated method stub
		for(int i=n/2-1; i>=0; i--) max_heap_recu(ori_array, i, n);
		return 0;
	}
	

}
