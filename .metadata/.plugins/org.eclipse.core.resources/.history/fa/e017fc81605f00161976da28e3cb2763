/**
 * quick sort
 * unstable
 * time: worst, O(n^2), average, O(nlogn); best, O(nlogn)
 * auxiliary:O(nlogn)?why?
 */
#include"several_algs.h"

static int partition(int ori_array[], int l, int r){
	int pivot = ori_array[r];
	int i = l;
	int j=l;
	for(j=l; j<r; j++){
		if(ori_array[j] < pivot){
			i++;
			swap(&ori_array[i], &ori_array[j]);
			//i++;
		}
	}
	swap(&ori_array[i], &ori_array[r]);
	return i;
}
int quick_sort(int ori_array[], int l, int r){
	if(l<r){
		int q = partition(ori_array, l, r);
		int ret1 = quick_sort(ori_array, l, q-1);
		int ret2 = quick_sort(ori_array, q+1, r);
	}
	return OK;
}
