/**
 * selection sort
 * stable
 * time: worst, O(n^2); average, O(n^2); best, O(n^2)
 * auxiliary: O(1)
 */
#include"several_algs.h"
int selection_sort(int ori_array[], int n){
	int i=0;
	int j=0;
	int lowindex=0;
	for(i=0; i<n; i++){
		lowindex=i;
		for(j=i+1; j<n; j++){
			if(ori_array[j] < ori_array[lowindex]) lowindex = j;
		}
		swap(&ori_array[i], &ori_array[lowindex]);
	}
	return OK;
}
